// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for credentials login
  role          String    @default("user") // user, admin, moderator
  
  // Profile fields
  bio           String?
  bannerImage   String?
  twitter       String?
  discord       String?
  twitch        String?
  youtube       String?
  startggSlug   String?   // e.g. "jonzey" from start.gg/user/jonzey
  
  // Competition Hub Relations
  captainOf     Team[]    @relation("TeamCaptain")
  teamMemberships TeamMember[]
  uploadedReplays Replay[]
  
  // 2FA fields
  twoFactorEnabled Boolean @default(false)
  twoFactorSecret  String?
  
  accounts      Account[]
  sessions      Session[]
  newsArticles  NewsArticle[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  type       String   @default("email") // email, 2fa

  @@unique([identifier, token])
}

// Tournament Models
model Tournament {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  startDate   DateTime?
  endDate     DateTime?
  description String?
  status      String   @default("upcoming") // upcoming, active, completed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  events      Event[]
  teams       TournamentTeam[]
}

model Event {
  id           String   @id @default(cuid())
  name         String
  slug         String
  game         String   // "Rocket League", "Valorant", etc.
  tournamentId String
  startDate    DateTime?
  description  String?
  status       String   @default("upcoming")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  matches      Match[]
  
  @@unique([slug, tournamentId])
}

// Enhanced Team Model for User Management
model Team {
  id              String       @id @default(cuid())
  name            String
  slug            String       @unique
  school          String?
  logoUrl         String?
  
  // Team Profile Fields
  logo            String?
  bio             String?
  twitter         String?
  discord         String?
  instagram       String?
  website         String?

  // New Fields for Competition Hub
  captainId       String       // Made non-optional as per instruction
  captain         User         @relation("TeamCaptain", fields: [captainId], references: [id])
  members         TeamMember[]
  startggTeamSlug String?      // e.g. "team/nameless-esports"
  replays         Replay[]
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  // Existing Relations
  players         Player[]     // Keeping for backward compatibility if needed
  tournaments     TournamentTeam[]
  homeMatches     Match[]      @relation("HomeTeam")
  awayMatches     Match[]      @relation("AwayTeam")
}

model TeamMember {
  id        String   @id @default(cuid())
  userId    String
  teamId    String
  role      String   @default("PLAYER") // CAPTAIN, PLAYER, SUBSTITUTE, COACH
  user      User     @relation(fields: [userId], references: [id])
  team      Team     @relation(fields: [teamId], references: [id])
  joinedAt  DateTime @default(now())

  @@unique([userId, teamId])
}

model Replay {
  id            String   @id @default(cuid())
  ballchasingId String   @unique // ID from ballchasing.com
  title         String
  teamId        String?
  team          Team?    @relation(fields: [teamId], references: [id])
  uploaderId    String
  uploader      User     @relation(fields: [uploaderId], references: [id])
  status        String   @default("PENDING") // PENDING, PROCESSED, FAILED
  stats         Json?    // Cached stats
  uploadedAt    DateTime @default(now())
}

model Player {
  id        String   @id @default(cuid())
  name      String
  gamerTag  String   @unique
  teamId    String?
  role      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  team      Team?    @relation(fields: [teamId], references: [id], onDelete: SetNull)
}

model TournamentTeam {
  id           String   @id @default(cuid())
  tournamentId String
  teamId       String
  seed         Int?
  placement    Int?
  points       Int      @default(0)
  wins         Int      @default(0)
  losses       Int      @default(0)
  createdAt    DateTime @default(now())
  
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  team         Team       @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  @@unique([tournamentId, teamId])
}

model Match {
  id          String   @id @default(cuid())
  eventId     String
  homeTeamId  String
  awayTeamId  String
  homeScore   Int?
  awayScore   Int?
  scheduledAt DateTime?
  playedAt    DateTime?
  status      String   @default("scheduled") // scheduled, live, completed, cancelled
  vodUrl      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  homeTeam    Team     @relation("HomeTeam", fields: [homeTeamId], references: [id])
  awayTeam    Team     @relation("AwayTeam", fields: [awayTeamId], references: [id])
}

// Initiative League (High School) specific models
model School {
  id          String   @id @default(cuid())
  name        String
  city        String?
  state       String?
  district    String?
  contactName String?
  contactEmail String?
  status      String   @default("pending") // pending, active, inactive
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([name, state])
}

model NewsArticle {
  id            String   @id @default(cuid())
  title         String
  slug          String   @unique
  content       String
  excerpt       String?
  coverImage    String?
  featuredImage String?  // Large featured image for article header
  bannerImage   String?  // Wide banner image
  author        String?   // Keep for legacy/display
  authorId      String?
  authorUser    User?     @relation(fields: [authorId], references: [id])
  category      String   @default("General")
  tags          String[] @default([])
  published     Boolean  @default(false)
  publishedAt   DateTime?
  deletedAt     DateTime? // For soft delete
  views         Int      @default(0)
  
  // SEO Fields
  metaTitle       String?
  metaDescription String?
  keywords        String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
model Invoice {
  id              String   @id @default(cuid())
  invoiceNumber   String   @unique
  dealId          String?  // Reference to CRM deal (optional)
  clientName      String
  clientEmail     String
  clientCompany   String?
  amount          Decimal  @db.Decimal(10, 2)
  description     String?
  dueDate         DateTime?
  status          String   @default("unpaid") // unpaid, paid, overdue, cancelled
  paymentLink     String?  // Link for online payment
  notes           String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  paidAt          DateTime?
  
  @@index([status])
  @@index([clientEmail])
}

model SiteSettings {
  id                       String   @id @default(cuid())
  siteName                 String   @default("Nameless Esports")
  siteDescription          String   @default("Professional esports organization and gaming community")
  seoKeywords              String   @default("esports, competitive gaming, tournaments, leagues")
  contactEmail             String   @default("contact@namelessesports.com")
  
  socialTwitter            String   @default("@NamelessEsports")
  showSocialTwitter        Boolean  @default(true)
  socialDiscord            String   @default("nameless")
  showSocialDiscord        Boolean  @default(true)
  socialYoutube            String   @default("@NamelessEsports")
  showSocialYoutube        Boolean  @default(true)
  socialTwitch             String   @default("namelessesportshq")
  showSocialTwitch         Boolean  @default(true)
  socialInstagram          String   @default("namelessesports")
  showSocialInstagram      Boolean  @default(false)
  socialTiktok             String   @default("namelessesports")
  showSocialTiktok         Boolean  @default(false)

  maintenanceMode          Boolean  @default(false)
  allowRegistration        Boolean  @default(true)
  requireEmailVerification Boolean  @default(false)
  defaultUserRole          String   @default("user")
  primaryColor             String   @default("#ec4899")
  accentColor              String   @default("#8b5cf6")
  cardBackgroundColor      String   @default("#150a20")
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
}